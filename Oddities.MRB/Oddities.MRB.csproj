        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <PropertyGroup Label="Packaging">
        <PackageId>FVNever.Oddities.MRB</PackageId>
        <PackageTags>bitmap;graphics;mrb;shg</PackageTags>
