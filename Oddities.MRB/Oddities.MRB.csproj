    <ItemGroup>
        <PackageReference Include="ChangelogAutomation.MSBuild" Version="3.0.3" PrivateAssets="All"/>
        <PackageReference Include="JetBrains.Annotations" Version="2025.2.2" PrivateAssets="All"/>
        <PackageReference Include="Oxage.Wmf" Version="0.6.1"/>
    </ItemGroup>

    <Import Project="..\Oddities.StreamUtil\Oddities.StreamUtil.projitems" Label="Shared"/>

</Project>
